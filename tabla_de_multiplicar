<meta charset="UTF-8">

<h1>PROGRAMA - CALCULAR TABLA DE MULTIPLICAR</h1>

<script>

	function saltarLinea() {

		document.write("<br>");
		document.write("<br>");
		document.write("<br>");

	}

	function imprimir(frase) {

		document.write(frase)
		saltarLinea()

	}

	var numero = parseInt(prompt("Ingrese que tabla quiere:"));

	var multiplicador = 1;

	imprimir("Usando while");

	while (multiplicador <= 10) {

		imprimir(numero + " X " + multiplicador + " = " + (numero * multiplicador));
		multiplicador++;	

	}

	imprimir("Usando for")

	for (multiplicador = 1; multiplicador <= 10; multiplicador++) {

		imprimir(numero + " X " + multiplicador + " = " + (numero * multiplicador));

	}

	

</script>
